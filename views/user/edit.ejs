<% layout('partials/layouts/base') -%>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <section class="content" style="min-height: 0">
        <%if (typeof success == 'object' && success) { %>

        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h4><i class="icon fa fa-check"></i> Alert!</h4>
            <%=success.message%>
        </div>

        <% } %>
        <%if (typeof info == 'object' && info) { %>

        <div class="alert alert-info alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h4><i class="icon fa fa-info"></i> Alert!</h4>
            <%=info.message%>
        </div>

        <% } %>
        <%if (typeof warning == 'object' && warning) { %>

        <div class="alert alert-warning alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h4><i class="icon fa fa-warning"></i> Alert!</h4>
            <%=warning.message%>
        </div>

        <% } %>
        <%if (typeof danger == 'object' && danger) { %>

        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h4><i class="icon fa fa-ban"></i> Alert!</h4>
            {{{danger.message}}}
        </div>

        <% } %>

    </section>

    <section class="content">
        <div class="row">
            <div class="col-md-3">

                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Edit User</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form role="form" method="post" action="/user/update">
                        <div class="box-body">

                            <div class="form-group">
                                <label for="name">Name</label>
                                <input type="text" class="form-control" id="name" name="name" value="<%= user.name %>" required>
                            </div>

                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" class="form-control" id="email" name="email" placeholder="Enter email" value="<%= user.email %>" required>
                            </div>

                        </div>
                        <!-- /.box-body -->

                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary pull-right">Submit</button>
                        </div>
                    </form>
                </div>

            </div>
            <div class="col-md-9">
                <% include userTable %>
            </div>

        </div>
    </section>

</div>
<!-- /.content-wrapper -->

